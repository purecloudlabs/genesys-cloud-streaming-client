{
  "name": "pc-streaming-client",
  "version": "0.0.11",
  "description": "client for the firehose websocket/xmpp interface",
  "main": "src/client.js",
  "files": [
    "src",
    "web/pc-streaming-client.js"
  ],
  "pre-push": [
    "test"
  ],
  "config": {
    "coverage": "--coverage-report=lcov",
    "snazzy": "--verbose | snazzy"
  },
  "scripts": {
    "test": "npm run semistandard && tap test/unit/*.js --coverage",
    "test:coverage": "npm run test && tap $npm_package_config_coverage",
    "semistandard": "semistandard $npm_package_config_snazzy",
    "semistandard:fix": "semistandard --fix"
  },
  "semistandard": {
    "ignore": [
      "/.nyc_output",
      "/coverage",
      "/scripts"
    ]
  },
  "publishConfig": {
    "registry": "https://purecloud.artifactoryonline.com/purecloud/api/npm/inin-internal-npm-dev/"
  },
  "author": "",
  "dependencies": {
    "stanza.io": "^8.1.1"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "semistandard": "^9.2.1",
    "snazzy": "^6.0.0",
    "tap": "^10.0.1",
    "testdouble": "^1.11.1",
    "webpack": "^2.2.0"
  }
}
