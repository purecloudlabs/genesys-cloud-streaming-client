{
  "extends": "tslint-config-semistandard",
  "linterOptions": {
    "exclude": [
      "src/**/*.js",
      "test/**/*.js"
    ]
  },
  "rules": {
    "deprecation": false,
    "no-empty": [
      true,
      "allow-empty-catch",
      "allow-empty-functions"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "ignore",
          "arrays": "ignore",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ]
  }
}
